@model Framework.ViewData.Control.ComboboxViewData

@{
    var css = "form-group form-input-group";
    if(Model.NotChangeWhenUpdate)
    {
        css = "form-group form-input-group hidden-when-update";
    }
}

<div class="@css" id="@Model.FieldName" name="@Model.FieldName" jsonvalue="jsonCombobox">
    <label class="col-sm-4 control-label">
        @Model.Label
    </label>
    <div class="col-sm-7">
        <select class="selectpicker" name="@Model.FieldName" id="@Model.FieldName" data-live-search="true" data-style="btn-primary"
                value-member="@Model.ValueMember"
                display-member="@Model.DisplayMember"
                data-ajax="@Model.Url"></select>
    </div>
</div>

