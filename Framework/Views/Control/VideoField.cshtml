

@model Framework.ViewData.Control.VideoFieldViewData

@if (Model.Visible == false)
{
    @Html.Raw("<div style=\"display:none;\">");
}


<div class="form-group form-input-group" id="@Model.FieldName" name="@Model.FieldName" jsonvalue="jsonVideoField">
    <label class="col-sm-4 control-label">
        @Model.Label
    </label>

    <div class="col-sm-7 video-control">
        <input style="display: none" name="videoId" />
        <input class="form-control" type="text" required="true"
               autocomplete="off" aria-required="true">

        <iframe width="420" height="315"
                style="margin-top: 20px; display:none" src=""></iframe>
    </div>

</div>


@if (Model.Visible == false)
{
    @Html.Raw("</div>");
}
